@model IEnumerable<EmployeeViewModel>



@{
    ViewData["Title"] = "All Employees";

    string viewdatamessage = ViewData["Message"] as string; //reruires Casting

    string vBagMessage = ViewBag.Message; //Can't Engorce Type Safety -> Not Reruires Casting



}
@*<div class="alert alert-success">*@
    @*@ViewData["Message"]*@
    @*@ViewBag.Message*@

@*</div>*@

<H2>All Employees</H2>
<br />
<br />
<a asp-action="Create" class=" btn btn-primary">Create New Employee</a>
<br />
<br />
<br />
<div class="row justify-content-center align-items-center mt-5">
<form asp-action="Index" class="row col-8 offset-1">
    <div class="col-8">
        <input type="text" class="form-control" name="SearchValue" placeholder="Search By Name" />
    </div>
    <div class="col-4">
        <input type="submit" value="Search" class="btn btn-success" />

    </div>

</form>    

</div>
@if(Model.Count()>0)
{                                                                                                   
    <table class="mt-3 table table-striped table-hover" >
        <thead>                                                                             
            <tr>                                                                        
                <td>@Html.DisplayNameFor(D=>D.Name)</td>
                <td>@Html.DisplayNameFor(D=>D.Age)</td>
                <td>@Html.DisplayNameFor(D=>D.Department)</td>
                <td>@Html.DisplayNameFor(D=>D.Image)</td>
                <td>@Html.DisplayNameFor(D=>D.salary)</td>
                <td>@Html.DisplayNameFor(D=>D.IsActive)</td>
                <td>@Html.DisplayNameFor(D=>D.Email)</td>
                <td>@Html.DisplayNameFor(D=>D.HireDate)</td>
                <td>@Html.DisplayNameFor(D=>D.PhoneNumber)</td>
                
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   
        <tbody>

            @foreach(var employee in Model)
            {<tr>
                <td>@employee.Name</td>
                <td>@employee.Age</td>
                    <td>@Html.DisplayFor(e=>employee.Department.Name)</td>
                    <td><img src="~/Files/Images/@employee.ImageName" class="img-fluid rounded-circle" alt="Employee Image" height="30"width="30" /></td>
                <td>@employee.salary</td>
                <td>@employee.IsActive</td>
                <td>@employee.Email</td>
                <td>@employee.HireDate</td>
                <td>@employee.PhoneNumber</td>

                    <partial name="_ButtonsPartialView" model="employee.Id.ToString()">
                </tr>
            }

        </tbody>

    </table>
}
else

{
    <div class="alert alert-warning">

        <h1>There Is No Employee !! </h1>


    </div>

}
